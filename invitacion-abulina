  <script>
    // Texto de la invitaci√≥n para copiar
    const datosInvitacion = `
Te invitamos a nuestra boda civil de Daniel & Nicole.

Invitado: Abulina
N√∫mero de accesos: 1

Lugar: Molino del puente, Cajas
Hora: 16:00 h
`;

    const btnCopiar = document.getElementById("btnCopiar");
    const mensajeCopiado = document.getElementById("mensajeCopiado");

    btnCopiar.addEventListener("click", async () => {
      mensajeCopiado.textContent = "";

      try {
        if (navigator.clipboard && navigator.clipboard.writeText) {
          await navigator.clipboard.writeText(datosInvitacion.trim());
        } else {
          // Fallback para navegadores antiguos
          const area = document.createElement("textarea");
          area.value = datosInvitacion.trim();
          area.setAttribute("readonly", "");
          area.style.position = "absolute";
          area.style.left = "-9999px";
          document.body.appendChild(area);
          area.select();
          document.execCommand("copy");
          document.body.removeChild(area);
        }

        mensajeCopiado.textContent = "¬°Datos copiados! üíú";
      } catch (error) {
        console.error(error);
        mensajeCopiado.textContent = "No se pudo copiar autom√°ticamente, pero puedes seleccionar y copiar el texto.";
      }
    });
  </script>
